@model TestsAppCoreMVC.ViewModels.LoginModel

<h2>Login to site</h2>

<a asp-action="Register" asp-controller="Account" class="btn btn-primary">Register</a>

<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true" class="p-3">
    <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Email">Enter Email</label>
            <input type="text" asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"/>
        </div>
        <div class="form-group">
            <label asp-for="Password">Enter password</label>
            <input asp-for="Password" />
            <span asp-validation-for="Password"  class="text-danger"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Enter" class="btn btn-success" />
        </div>
    </div>
</form>